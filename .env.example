# DB (prod=Postgres; dev falls back to SQLite if unset)
DATABASE_URL=

# Redis (Upstash/managed). Dev can omit to use in-memory mock.
REDIS_URL=

# Search providers (at least ONE required)
TAVILY_API_KEY=
SERPER_API_KEY=
SEMANTIC_SCHOLAR_API_KEY=
NEWS_API_KEY=
SEARCH_PROVIDERS=tavily,serper,semanticScholar,newsApi

# Fact-check preflight
FACTCHECK_DOMAINS=snopes.com,politifact.com,factcheck.org,reuters.com/fact-check,apnews.com/ap-fact-check
FACTCHECK_TIMEOUT_MS=4000

# LLM & embeddings (paid tier only)
OPENAI_API_KEY=
ENABLE_LLM=false
ENABLE_EMBEDDINGS=false
PAID_TIER_SECRET=change_me

# Limits & knobs
FREE_TIER_LIMIT=10
CACHE_TTL_SECONDS=600
CACHE_TTL_7D_SECONDS=900
CACHE_TTL_30D_SECONDS=3600
CACHE_TTL_1Y_SECONDS=21600
CACHE_TTL_ALL_SECONDS=86400
EQS_TOP_N=5
PROVIDER_TIMEOUT_MS=8000
EXTRACT_TIMEOUT_MS=10000
BREAKER_ERROR_THRESHOLD=5
BREAKER_COOLDOWN_MS=60000
WORKER_CONCURRENCY=4
MAX_CONTENT_BYTES=2000000

# UI / i18n
DEFAULT_UI_LANG=en
